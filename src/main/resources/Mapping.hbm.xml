<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.atf.jdbc.Sales" table="Sales">

        <id name="SalesOrderID" type="int" column="SalesOrderID"/>
        <property name="SalesOrderDetailID" type="int" column="SalesOrderDetailID"/>
        <property name="OrderQty" type="short" column="OrderQty"/>
        <property name="ProductID" type="int" column="ProductID"/>
        <property name="UnitPrice" type="double" column="UnitPrice"/>
        <property name="UnitPriceDiscount" type="double" column="UnitPriceDiscount"/>
        <property name="rowguid" type="int" column="rowguid"/>
        <property name="ModifiedDate" type="java.util.Date" column="ModifiedDate"/>

    </class>
</hibernate-mapping>